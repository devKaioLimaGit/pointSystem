<%- include('../partials/header.ejs') %>
<%- include('../partials/navbaruser.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>JUSTIFICAR</h2>
        </div>
        <div class="card-body">
            <form action="/user/save/justify" method="post">
                <textarea name="justify" class="tinymcs"><%= justify.justify %></textarea>
                <input type="hidden" name="id" value="<%= justify.id %>">
                <br>
                <button class="btn btn-primary" type="submit">Justificar</button>
            </form>                
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
<script src="/tinymce/js/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: "pt_BR",
        selector: ".tinymcs",
        plugins: [
            "advlist",
            "autolink",
            "link",
            "image",
            "lists",
            "preview",
            "searchreplace",
            "wordcount",
            "fullscreen",
            "insertdatetime",
            "media",
            "save",
            "table",
            "emoticons"
        ]
    });
</script>
